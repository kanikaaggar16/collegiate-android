<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registeration">
<ImageView

    android:layout_width="210dp"
    android:layout_height="210dp"
    android:layout_centerHorizontal="true"
    android:background="@drawable/logorahul"/>

    <include
        layout="@layout/register_shape"
        android:id="@+id/shape"
        ></include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your email"
        android:textSize="30dp"
        android:id="@+id/temail"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="30dp"/>
    <EditText
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:id="@+id/edit_text1"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/temail"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your Password"
        android:textSize="30dp"
        android:id="@+id/tpassword"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="30dp"/>
    <EditText
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:id="@+id/edit_text2"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/tpassword"
        />
    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginTop="580dp"
        android:textStyle="bold"
        android:text="REGISTER"
        android:id="@+id/register_button"
        android:textSize="30dp"
        android:fontFamily="monospace"
        android:textColor="#000000"
        android:background="#8b8989"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="200dp"
        android:id="@+id/sign_up"
        android:layout_height="30dp"
        android:layout_marginTop="660dp"
        android:textSize="10dp"
        android:layout_centerHorizontal="true"
        android:text="Already have an accout?Sign In"
        android:textColor="#000000"
        android:background="#FFFFFF"/>


</RelativeLayout>